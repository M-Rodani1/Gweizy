{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "gunicorn backend.app:app --bind 0.0.0.0:$PORT --workers 2 --threads 2 --timeout 120",
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 3
  }
}
